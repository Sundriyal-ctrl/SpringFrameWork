<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--- Employeee For Getter Setter Injection -->
    <bean id="employee" class="application.Employee">
        <property name="id" value="12"/>
        <property name="name" value="Anuj Sundriyal"/>
    </bean>
  <!-- Employee for Constructer Injection   -->
    <bean id="employee1" class="application.Employee">
       <constructor-arg index="0" value="13"></constructor-arg>
        <constructor-arg index="1" value="Anuj Sundriyal"/>
    </bean>
    <!-- Object Injection -->
    <bean id="address" class="application.Address">
        <property name="city" value="Dehradun"/>
        <property name="area" value="Upper Nathanpur"/>

    </bean>
    <bean id="student" class="application.Student">
        <property name="roll" value="145"/>
        <property name="name" value="Anuj Sundriyal"/>
        <property name="address" ref="address"/>
    </bean>




</beans>